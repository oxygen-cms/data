{
    "name": "oxygen/data",
    "description": "Oxygen's Data Layer",
    "license": "MIT",
    "keywords": [
        "cms",
        "framework",
        "OxygenExtension"
    ],
    "authors": [
        {
            "name": "Chris Chamberlain",
            "email": "c.chamberlain@iinet.net.au"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "illuminate/support": "~6.0",
        "illuminate/log": "~6.0",
        "laravel-doctrine/orm": "~1.5",
        "austinsmorris/doctrine-dbal-datetimeutc": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Oxygen\\Data\\": "src/"
        }
    },
    "extra": {
        "title": "Oxygen Data",
        "readme": "oxygen.md",
        "changes": "changes.md",
        "icon": "icon.png",
        "providers": [
            {
                "name": "Data",
                "class": "Oxygen\\Data\\DataServiceProvider",
                "description": "Doctrine ORM extensions and pagination"
            },
            {
                "name": "Validation",
                "class": "Oxygen\\Data\\Validation\\Laravel\\ValidationServiceProvider",
                "description": "Custom Validation Framework"
            }
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.18",
        "phpspec/phpspec": "^6.1"
    },
    "scripts": {
        "test": "vendor/bin/phpspec run && vendor/bin/phpstan analyze src --level 2"
    }
}
